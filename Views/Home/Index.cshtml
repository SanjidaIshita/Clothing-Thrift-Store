@model IEnumerable<ProductModel>
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid bg-transparent pb-2">
    <div class="my-4">
        <!--Home page Carousel-->
        <div class="bd-example">
            <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                    <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                    <li data-target="#carouselExampleCaptions" data-slide-to="3"></li>
                </ol>
                <div class="carousel-inner">
                    <!--Men's Carousel-->
                    <div class="carousel-item active">
                        <a class="text-decoration-none" asp-controller="Product" asp-action="Men">
                            <img src="~/images/Home/carouselMen.jpg" class="d-block w-100" alt="Slide1">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Men's Wear</h5>
                                <p>Find men's fashion.</p>
                            </div>
                        </a>
                    </div>
                    <!--Women's Carousel-->
                    <div class="carousel-item">
                        <a class="text-decoration-none" asp-controller="Product" asp-action="Women">
                            <img src="~/images/Home/carouselWomen.jpg" class="d-block w-100" alt="Slide2">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Women's Wear</h5>
                                <p>Find for women fashion.</p>
                            </div>
                        </a>
                    </div>
                    <!--Kid's Carousel-->
                    <div class="carousel-item">
                        <a class="text-decoration-none" asp-controller="Product" asp-action="Kids">
                            <img src="~/images/Home/carouselKids.jpeg" class="d-block w-100" alt="Slide3">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Kids Wear</h5>
                                <p>Find kids fashion.</p>
                            </div>
                        </a>
                    </div>
                    <!--Others Carousel-->
                    <div class="carousel-item">
                        <a class="text-decoration-none" asp-controller="Product" asp-action="Others">
                            <img src="~/images/Home/carouselOthers.jpg" class="d-block w-100" alt="Slide4">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Needed Clothings</h5>
                                <p>Shop for extra necessary colthings.</p>
                            </div>
                        </a>
                    </div>
                </div>
                <!--Carousel Left Slider Button-->
                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <!--Carousel Left Slider Button-->
                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</section>
<!--Our Collection-->
<section class="py-5 bg-transparent">
    <h3 class="font-weight-bold text-uppercase text-center text-monospace col-12 pb-4">Our Collection</h3>
    <div class="container">
        <div class="row">
            <!--Trendy Wears DIV-->
            <div class="col-sm-6 col-xl-4">
                <a asp-controller="Product" asp-action="AllProduct" class="text-decoration-none">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h2 class="card-title text-center text-info">Trendy Wears</h2>
                        </div>
                        <div class="embed-responsive embed-responsive-4by3">
                            <img class="bd-placeholder-img card-img-bottom embed-responsive-item" src="~/images/Home/TrendyWears.jpg" />
                        </div>
                    </div>
                </a>
            </div>
            <!--Winter Comfy DIV-->
            <div class="col-sm-6 col-xl-4">
                <a asp-controller="Product" asp-action="AllProduct" class="text-decoration-none">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h2 class="card-title text-center text-info">Winter Comfy</h2>
                        </div>
                        <div class="embed-responsive embed-responsive-4by3">
                            <img class="bd-placeholder-img card-img-bottom embed-responsive-item" src="~/images/Home/WinterComfy.jpg" />
                        </div>
                    </div>
                </a>
            </div>
            <!--Cozy Combo DIV-->
            <div class="col-sm-6 col-xl-4">
                <a asp-controller="Product" asp-action="AllProduct" class="text-decoration-none">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h2 class="card-title text-center text-info">Cozy Combo</h2>
                        </div>
                        <div class="embed-responsive embed-responsive-4by3">
                            <img class="bd-placeholder-img card-img-bottom embed-responsive-item" src="~/images/Home/CosyCombo.jpg" />
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>
<!--Recently added Collection-->
<section class="bg-transparent">
    <h3 class="font-weight-bold text-uppercase text-center text-monospace col-12 pb-3">Recently Added</h3>
    <div class="container">
        <div class="row">
            @foreach (var product in Model)
            {
                <!--Recently Added 4 Products-->
                <div class="col-sm-6 col-xl-3">
                    <!--Product Info Card-->
                    <div class="card mb-4 shadow-sm">
                        <div class="embed-responsive embed-responsive-4by3">
                            <img class="bd-placeholder-img card-img-top embed-responsive-item" src="~/@product.pImage" />
                        </div>
                        <div class="card-body">
                            <h4 class="card-title text-center">@product.pName</h4>
                            <p class="text-muted text-center small">Section: @product.pSection <br />  BDT @product.pPrice</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <!--Cart Button-->
                                <div class="btn-group">
                                    <a asp-controller="Order" asp-action="Cart" asp-route-id="@product.pId" class="btn btn-sm btn-warning px-4"><i class="fa fa-shopping-cart fa-lg" aria-hidden="true"></i></a>
                                </div>
                                <!--View Details Button-->
                                <div class="btn-group">
                                    <a asp-controller="Product" asp-action="ProductDetail" asp-route-id="@product.pId" class="btn btn-sm btn-outline-info">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
