@model ProductModel
@{
    
    ViewData["Title"] = "ConfirmOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="d-flex row justify-content-center">
        <div class="col-md-10">
            <div class="receipt bg-white p-5 rounded">
                <h4 class="mt-2 mb-3">Your order is added!</h4>
                <h6 class="name">Hello!</h6>
                <span class="fs-12 text-black-50">Your order has been confirmed and will be shipped as soon as possible</span>
                <hr />
                <!--Order Details-->
                <div class="d-flex flex-row justify-content-between align-items-center order-details">
                    <div>
                        <span class="d-block fs-12">Order Date & Time</span>
                        <span class="font-weight-bold"> @DateTime.Now</span>
                    </div>
                    <div>
                        <span class="d-block fs-12">Product No.</span>
                        <span class="font-weight-bold">@Model.pId </span>
                    </div>
                </div>
                <hr />
                <div class="d-flex justify-content-between align-items-center product-details">
                    <div class="product-name-image">
                        <div class="embed-responsive embed-responsive-1by1">
                            <img class="rounded bd-placeholder-img embed-responsive-item" src="~/@Model.pImage" alt="orderList" />
                        </div>
                        <div class="ml-2">
                            <p class="font-weight-bold">@Model.pName</p>
                            <p class="fs-12">Size: @Model.pSize</p><br />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex justify-content-between"><span>Product Price</span><span class="font-weight-bold">@Model.pPrice</span></div>
                        <div class="d-flex justify-content-between"><span>Quantity</span><span class="font-weight-bold">x @Model.pQuantity</span></div>
                    </div>
                </div>
                <div class="mt-5 row justify-content-end">
                    <div class="col-md-6">
                        <div class="billing">
                            <div class="d-flex justify-content-between"><span>Subtotal</span><span class="font-weight-bold">@Model.pPrice</span></div>
                            <div class="d-flex justify-content-between mt-2"><span>Delivery Charge</span><span class="font-weight-bold">Tk. 50</span></div>
                            <hr />
                            <div class="d-flex justify-content-between mt-2"><span>Total =</span><span class="font-weight-bold">Tk.350</span></div>
                        </div>
                    </div>
                </div>
                <span class="d-block mt-3 text-black-50 fs-15">We will be send you product as soon as possile.Keep Thrifting!</span>
                <hr>
                <!--Place Order Button-->
                <div class="col-4 my-2 mx-auto">
                    <a asp-controller="Order" asp-action="PlaceOrder" asp-route-id="@Model.pId" class="btn btn-instagram text-white font-weight-bold">Place Order</a>
                </div>
            </div>
        </div>
    </div>
</div>
